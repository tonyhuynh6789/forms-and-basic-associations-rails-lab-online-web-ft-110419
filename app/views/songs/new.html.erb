<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre_name %>
<%= f.text_field :genre_name, list: "genre_autocomplete", id: "song_genre_id" %>
  <datalist id="genre_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br>

  <%= f.fields_for :notes do |n| %>
    <%= n.label :content %>
  <%= n.text_field :content %>
  <%end%>
<br>
  <%= f.submit %>
<% end %>






